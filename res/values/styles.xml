<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style><!-- style for the tabs -->
    
    <style name="WorkspaceActionBarTabStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabView">
        <!--  <item name="android:background">@drawable/actionbar_tab_bg</item> -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="WorkspaceActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar">
        <!--  <item name="android:background">@drawable/actionbar_tab_bg</item> -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="Theme.Workspace" parent="android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarTabStyle">@style/WorkspaceActionBarTabStyle</item>
    </style>

</resources>