<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
       >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/chooser_list_item_height"
            android:paddingBottom="@dimen/chooser_list_item_padding_bottom"
            android:paddingLeft="@dimen/chooser_list_item_padding_left"
            android:text="Plant Name"
            android:textSize="24sp"
            android:width="100dip" />

        <TextView
            android:id="@+id/col1"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:minHeight="@dimen/chooser_list_item_height"
            android:paddingBottom="@dimen/chooser_list_item_padding_bottom"
            android:paddingLeft="@dimen/chooser_list_item_padding_left"
            android:text="Assessment"
            android:textSize="@dimen/chooser_list_item_text_size"
            android:width="100dip" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/col1"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@+id/TextView01"
            android:src="@drawable/test" />

    </RelativeLayout>

</LinearLayout>